<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for @album, html: { multipart: true } do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <fieldset>
          <legend>Edit album details:</legend>

          <div class="field">
            <%= f.label :name, 'Album name:' %>
            <%= f.text_field :name %>
          </div>

          <div class="field">
            <%= f.label :release_date, 'Release date:' %>
            <%= f.date_select :release_date %>
          </div>

          <div class="field">
            <%= f.file_field :album_cover %>
          </div>

          <div class="actions">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>

        </fieldset>
    <% end %>

  </div>
</div>