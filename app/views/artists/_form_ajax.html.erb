<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <%= form_for @artist,  validate: true, html: { multipart: true }, remote: true, authenticity_token: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <fieldset>
        <legend>Add new artist:</legend>
        <% #:name_first, :name_last, :name_stage, :avatar %>

        <div class="field">
          <%= f.label :name_first, 'First name:' %>
          <%= f.text_field :name_first %>
        </div>

        <div class="field">
          <%= f.label :name_last, 'Last name:' %>
          <%= f.text_field :name_last %>
        </div>

        <div class="field">
          <%= f.label :name_stage, 'Stage name:' %>
          <%= f.text_field :name_stage %>
        </div>

        <div class="field">
          <%= f.label :avatar, 'Upload artist picture:' %>
          <%= f.file_field :avatar, as: :file %>
        </div>

        <div class="actions">
          <%= f.submit buttonTitle(yield(:buttonTitle)), class: "btn btn-primary" %>
        </div>

        <button id="close_form_button" type="button" class="btn btn-warning" style="width:100%;">Close Form</button>

      </fieldset>
  <% end %>

  </div>
</div>