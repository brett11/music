<%= provide(:title, @artist.name_stage) %>
<div class="row">
  <aside class = "col-md-4">
    <section class="artist_info">

      <%= image_tag @artist.avatar.url(:medium) %>

    </section>
  </aside>
  <div class="col-md-8">
    <div id="artist_name">
      <%= @artist.name_stage %>
    </div>
    <% if logged_in? && current_user.admin? %>
      <p><%= link_to "Edit Artist Info", edit_artist_path(@artist) %></p>
    <br>
    <% end %>
    <div class="artist_albums">
      <h3>Albums</h3>
      <%= render(partial: 'albums/album', collection: @artist.albums.order("release_date DESC")) %>
    </div>
    <div class="artist_upcoming_shows">
      <h3>Upcoming shows</h3>
      <%= render 'shared/artist_concerts' %>
    </div>

    <p><%= link_to "<-- Back to all artists", session[:forwarding_url] %></p>
  </div>
</div>