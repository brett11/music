<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for @artist, validate: true, html: { multipart: true } do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <fieldset>
          <legend>Edit artist details:</legend>

          <div class="field">
            <%= f.label :name_first, 'First name:' %>
            <%= f.text_field :name_first %>
          </div>

          <div class="field">
            <%= f.label :name_last, 'Last name:' %>
            <%= f.text_field :name_last %>
          </div>

          <div class="field">
            <%= f.label :name_stage, 'Stage name:' %>
            <%= f.text_field :name_stage %>
          </div>

          <div class="field">
            <%= f.file_field :avatar %>
          </div>

          <div class="actions">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>

        </fieldset>
    <% end %>

  </div>
</div>