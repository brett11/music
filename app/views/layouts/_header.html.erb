<header class ="navbar navbar-fixed-top navbar-inverse">
  <div class ="container">
    <div class="nav navbar-nav navbar-left">
      <%= link_to("MyFavArtists", root_path, id: "logo") %>
    </div>
    <nav>
      <ul class ="nav navbar-nav navbar-right">

        <li><%= link_to("Artists", artists_path)%></li>
        <li><%= link_to("Albums", albums_path)%></li>
        <li><%= link_to("Upcoming Shows", concerts_path)%></li>
        <li><%= link_to("Home", root_path)%></li>
        <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class = "dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li class="dropdown-item"><%= link_to "Profile", current_user %></li>
                <li class="dropdown-item"><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="dropdown-item"><%= link_to("All Users", users_path)%></li>
                <li class="divider"></li>
                <li class="dropdown-item">
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to("Sign up", signup_path)%></li>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>