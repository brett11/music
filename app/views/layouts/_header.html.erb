  <div class ="container">
    <nav >
      <div class="nav navbar-nav navbar-left">
        <%= link_to("MyFavArtists", root_path, id: "logo") %>
      </div>

      <button class="navbar-toggler navbar-toggler-right" type="button"
              data-toggle="collapse" data-target="#menuContent" aria-controls="menuContent"
              aria-expanded="false" aria-lavel="Toggle Navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse navbar-right" id="menuContent">
        <ul class="nav navbar-nav navbar-right">
          <li class="nav-item"><%= link_to("Artists", artists_path)%></li>
          <li class="nav-item"><%= link_to("Albums", albums_path)%></li>
