<div class="error partial">

      <% if object.errors.any? %>
          <div id="error_explanation">
            <h2>This form contains <%= pluralize(object.errors.count, "error") %>:</h2>
            <ul>
              <% object.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
</div>